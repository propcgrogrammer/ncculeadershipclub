<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        app:srcCompat="@drawable/alarm" />

    <TextView
        android:id="@+id/remind_kind_textview"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_below="@+id/imageView4"
        android:text="禪定"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/remind_start_datetime"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/remind_datetime"
        android:layout_below="@+id/remind_datetime"
        android:layout_marginTop="13dp"
        android:text="開始時間"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/remind_end_datetime"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignStart="@+id/remind_start_datetime"
        android:text="結束時間"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/remind_datetime"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView4"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/imageView4"
        android:text="提醒時間"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15dp" />


</RelativeLayout>
