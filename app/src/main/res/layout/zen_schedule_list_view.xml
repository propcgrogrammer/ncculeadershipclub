<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="31dp"
        app:srcCompat="@drawable/zen" />

    <TextView
        android:id="@+id/zen_kind_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView4"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/imageView4"
        android:text="禪定"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/zen_start_datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/zen_kind_textview"
        android:layout_below="@+id/zen_kind_textview"
        android:layout_marginTop="10dp"
        android:text="開始時間"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/zen_end_datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignStart="@+id/zen_start_datetime"
        android:text="結束時間"
        android:textSize="15dp" />


</RelativeLayout>
